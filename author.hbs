{{! author template}}
{{#author}}
<section id="author">
  <header class="author Container-Medium">
    <h3>{{name}}</h3>
    <p>{{bio}}</p>
    <ul>
      <li>{{website}}</li>
      <li>{{location}}</li>
    </ul>
  </header>
  <section class="wrapper Container-Large">
    {{!> "loop"}}
  </section>
</author>
{{/author}}
