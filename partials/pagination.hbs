{{! pagination template.}}
<section id="pagination">
  <h3 class="pagenum">Page <br>{{page}} of {{pages}}</h3>
  <ul>
    {{#if prev}}
      <li class="prev"><a href="{{page_url prev}}">Newer posts</a></li>
    {{/if}}
    {{#if next}}
      <li class="next"><a href="{{page_url next}}">Older posts</a></li>
    {{/if}}
  </ul>
</section>
{{! pagination template.}}
