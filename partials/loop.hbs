{{!loop template}}
<section id="loop" class="Container-Large">
  {{#if posts}}
  {{#foreach posts}}
    <article>
      <aside>

      </aside>
      <section class="body">
        <header>
          <a href="{{url absolute="true"}}"><h2>{{title}}</h2></a>
          <p><span>{{date format="MMMM DD, YYYY"}}</span> -
          {{#author}}
            <a href="{{url}}">{{name}}</a>
          {{/author}}
          </p>
        </header>
        <section class="excerpt">
          <p>{{excerpt words="30"}}...<a href="{{url absolute="true"}}">read this</a></p>
        </section>
      </section>
    </article>
  {{/foreach}}
  {{else}}
    No posts!
  {{/if}}
  <div style="clear:both;"></div>
</section>
<script>
  jQuery("#loop header h2").fitText();
</script>
